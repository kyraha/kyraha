<?xml version="1.0" encoding="UTF-8" ?> 
<!-- $Id$ -->
<Module>
    <ModulePrefs title="PseudoYKT to Unicode converter" height="400"/> 
    <Content type="html"><![CDATA[
        <br>Input text:<br>
        <textarea id="convertText" style="width:500px;height:360px;"></textarea>
        <br><input type="button" id="convert" value="Конвертировать" /><br/>

        <script type="text/javascript">

        function replaceText(current) {
            current = current.replace(/±/g, "ҕ");
            current = current.replace(/І/g, "ҥ");
            current = current.replace(/і/g, "ө");
            current = current.replace(/ґ/g, "һ");
            current = current.replace(/µ/g, "ү");
            current = current.replace(/Ў/g, "Ҕ");
            current = current.replace(/ў/g, "Ҥ");
            current = current.replace(/Ј/g, "Ө");
            current = current.replace(/¤/g, "Һ");
            current = current.replace(/Ґ/g, "Ү");
            return current;
        }
        $(function(){$("#convert").click(function(){$("#convertText").val(replaceText($("#convertText").val()))})})
        
        </script> 
    ]]>  
    </Content>
</Module>
